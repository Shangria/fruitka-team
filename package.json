  "main": "index.js",
  "scripts": {
    "start": "run-s scss-compile scss-watch pug",
    "scss-compile": "node-sass ./src/scss/style.scss ./dist/css/style.css",
    "scss-watch": "node-sass -w ./src/scss/style.scss ./dist/css/style.css",
    "pug": "pug -P -o ./dist/ -w ./src/pages/index.pug",
    "dist": "recursive-copy -w ./src/ ./dist/"
  },
