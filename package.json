{
  "name": "project-fruitka-team",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "run-p js img scss-compile pug-compile",
    "dev": "run-p scss-compile scss-watch pug-watch",
    "pug-compile": "pug -P -o ./docs/ ./src/pages/",
    "pug-watch": "pug -P -o ./docs/ -w ./src/pages/",
    "scss-compile": "node-sass ./src/scss/style.scss ./docs/css/style.css",
    "scss-watch": "node-sass -w ./src/scss/style.scss ./docs/css/style.css",
    "img": "recursive-copy ./src/img/ ./docs/img",
    "js": "recursive-copy ./src/js ./docs/js"
  },
  "author": "\"fruitka-team\"",
  "license": "ISC",
  "devDependencies": {
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "recursive-copy-cli": "^1.0.14"
  }
}
