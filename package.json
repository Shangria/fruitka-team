  "license": "ISC",
  "devDependencies": {
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "recursive-copy-cli": "^1.0.14"
  }
}
